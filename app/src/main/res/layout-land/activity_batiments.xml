        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:name="macheda.com.outerspacemanager.outerspacemanager.fragments.ListBatimentsFragment"
        android:id="@+id/listeBatiments" />
    <fragment
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:name="macheda.com.outerspacemanager.outerspacemanager.fragments.BatimentFragment"
        android:id="@+id/batimentFragment"
        android:layout_gravity="center_vertical" />
</LinearLayout>